/* pages/category/category.wxss */
/*标题  */
.nav_title{
  display: inline-block;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  font-weight: 500;
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: rgb(51, 51, 51);
}
/*分类  */
.category{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
}
.category-item{
	display: flex;
	flex-direction: column;
	align-items: center;
	width:150rpx; 
	height: 150rpx; 
}
.category-name{
	color: #aaa;
	font-size: 22rpx;
}
/*最近上新  */
.brand{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
}
.brand-item{
	display: flex;
	flex-direction: column;
	width: 220rpx; 
	height: 280rpx; 
  text-align: center;
  margin-bottom: 40rpx;
}
.brand-image{
  width: 100rpx;
  height: 120rpx;
}

/*分界线  */
.lightLine{
  width: 100%;
  height: 20rpx;
  background-color: rgb(245, 245, 245);
  margin-top: 15rpx;
}
/* 搜索按钮  */
.search{
  position: fixed;
  left: 40rpx;
  bottom: 60rpx;
  display: block;
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
  box-shadow:  0rpx 0rpx 0rpx 0rpx rgb(155,155,155),   
               -3rpx 0rpx 10rpx 0rpx rgb(210,210, 210),  
               6rpx 0rpx 100rpx 0rpx rgb(210,210, 210),  
               0rpx 3rpx 10rpx 0rpx rgb(210,210, 210);  
}
.search image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -17.5rpx;
  margin-top: -17.5rpx;
}
